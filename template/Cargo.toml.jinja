[package]
name = "{{ package_name }}"
version = "0.1.0"
edition = "2021"
description = "{{ project_description }}"
{% if repository_provider == 'github.com' %}
repository = "https://github.com/{{ repository_namespace }}/{{ repository_name }}/"
{% endif %}
license = "{% if copyright_license == 'Proprietary' %}LicenseRef-Proprietary{% else %}{{ copyright_license }}{% endif %}"
{% if copyright_license == 'Proprietary' %}
publish = false
{% endif %}

[dependencies]
{% if project_type == 'bin' %}
clap = { version = "3.2.15", features = ["derive"] }
{% endif %}
