DEFAULT: fmt check test clippy doc deny typos

fmt:
    cargo fmt --check

build *args="":
    cargo build{% if project_type == "library" %} --all-features{% endif %} {{ '{{' }}args{{ '}}' }}

check:
{% if project_type == "application" %}
    cargo check --all-targets
{% else %}
    cargo hack --feature-powerset check --all-targets
{% endif %}

test *args="":
    cargo test{% if project_type == "library" %} --all-features{% endif %} {{ '{{' }}args{{ '}}' }}

clippy *args="":
    cargo clippy --all-targets{% if project_type == "library" %} --all-features{% endif %} {{ '{{' }}args{{ '}}' }}

doc *args="":
    cargo doc --no-deps{% if project_type == "library" %} --all-features{% endif %} {{ '{{' }}args{{ '}}' }}

deny:
    cargo deny{% if project_type == "library" %} --all-features{% endif %} check

typos:
    typos
